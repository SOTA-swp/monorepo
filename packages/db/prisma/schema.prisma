generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // .envファイルの変数を参照
}

// --- ここからデータベースの「テーブル」設計 ---

// (例) 開発用のシンプルなユーザー認証テーブル
model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String  // 本番ではハッシュ化されたパスワードを保存
}

