generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // .envファイルの変数を参照
}

model User {
  id        String     @id @default(uuid())
  email     String  @unique
  username String
  password  String  // 本番ではハッシュ化されたパスワードを保存
  createdAt DateTime @default(now())

  createdPlans Plan[] @relation("CreatedBy")
  memberships PlanMember[] @relation("MemberOf")
  likes Like[]
  invitations Invitation[] @relation("InvitedUser")
  sentInvites Invitation[] @relation("Inviter")

  notifications Notification[] @relation("ReceivedNotifications")
  triggeredNotifications Notification[] @relation("TriggeredBy")
}

model Plan {
  id String @id @default(uuid())
  title String
  description String?
  isPublic Boolean @default(false)
  createdAt DateTime @default(now())

  creatorId String
  creator User @relation("CreatedBy", fields: [creatorId], references: [id], onDelete: Cascade)

  members PlanMember[]
  likes Like[]
  invitation Invitation[]

  defaultStartTime String @default("09:00")
  startDate        DateTime?
  coverImage String?

  notifications Notification[]
}

model PlanMember {
  userId String
  planId String
  user   User @relation("MemberOf", fields: [userId], references: [id], onDelete: Cascade)
  plan   Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  role String @default("VIEWER")

  @@id([userId, planId])
}

model Invitation {
  id           Int      @id @default(autoincrement())
  planId       String
  plan         Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  
  inviterId    String      // 招待した人
  inviter      User     @relation("Inviter", fields: [inviterId], references: [id], onDelete: Cascade)
  
  inviteeEmail String   // 招待された人のメール (F-PL-13)
  inviteeId    String?     // 招待された人が会員だった場合のID（null許容）
  invitee      User?    @relation("InvitedUser", fields: [inviteeId], references: [id])
  
  status       String   @default("PENDING") // 状態 (PENDING, ACCEPTED, DECLINED)
  createdAt    DateTime @default(now())

  notifications Notification[]

}

model Like {
  userId String
  planId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan   Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@id([userId, planId]) // 複合キー
}

model Notification {
  id        String           @id @default(uuid())
  type      String
  createdAt DateTime         @default(now())
  isRead    Boolean          @default(false)

  // ■ 誰宛の通知か (受信者)
  userId    String
  user      User     @relation("ReceivedNotifications", fields: [userId], references: [id], onDelete: Cascade)

  // ■ 誰がアクションしたか (送信者/トリガー)
  triggerUserId String
  triggerUser   User   @relation("TriggeredBy", fields: [triggerUserId], references: [id], onDelete: Cascade)

  // --- Type = INVITATION の場合 ---
  // Invitationテーブルと紐付け。Invitationが消えるとここも消える
  invitationId Int?
  invitation   Invitation? @relation(fields: [invitationId], references: [id], onDelete: Cascade)

  // --- Type = LIKE の場合 ---
  // Likeは複合キーのため直接リレーションせず、対象のPlanIdを保持する
  planId    String?
  plan      Plan?   @relation(fields: [planId], references: [id], onDelete: Cascade)
}
